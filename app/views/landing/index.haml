            %h3.categories__category-title Boating
      .categories__category--4
        %a{:href => "/s?category=motorcycles-scooters-bicycling"}
          .categories__categories__1__categories__category-content.categories__category-content{:style => "background-image: url(https://d2hxfhf337f2kp.cloudfront.net/ownoutdoors/ownOutDoors_category-Bicycles-Scooters-Motorcycles_BG_new.jpg)"}
